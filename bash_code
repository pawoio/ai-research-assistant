#!/bin/bash

# Set root directory
ROOT_DIR="cloud_run/paper_discovery"

# Create directories
mkdir -p "cloud_run"
mkdir -p ${ROOT_DIR}
mkdir -p ${ROOT_DIR}/services
mkdir -p ${ROOT_DIR}/models

# Create empty files
touch ${ROOT_DIR}/main.py
touch ${ROOT_DIR}/services/__init__.py
touch ${ROOT_DIR}/services/arxiv_client.py
touch ${ROOT_DIR}/services/bigquery_client.py
touch ${ROOT_DIR}/services/paper_processor.py
touch ${ROOT_DIR}/models/__init__.py
touch ${ROOT_DIR}/models/paper_models.py
touch ${ROOT_DIR}/requirements.txt
touch ${ROOT_DIR}/Dockerfile
touch ${ROOT_DIR}/config.py

echo "Project structure created under ${ROOT_DIR}/"