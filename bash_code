#!/usr/bin/env bash
set -euo pipefail
cd /home/ja/Documents/projekty/ai-research-assistant/terraform

# create module directories and standard files
mkdir -p modules/{bigquery_dataset,storage_bucket,pubsub_topic,project_apis,bigquery_jobs}
for m in modules/{bigquery_dataset,storage_bucket,pubsub_topic,project_apis,bigquery_jobs}; do
  mkdir -p "$m"
  touch "$m"/{main.tf,variables.tf,outputs.tf}
done

# create top-level terraform files (won't overwrite existing content)
touch main.tf provider.tf variables.tf outputs.tf apis.tf bigquery.tf gcs.tf pubsub.tf README.md

# ensure sql directory exists
mkdir -p sql

echo "Scaffold created under terraform/. Edit the created files to add module implementations."